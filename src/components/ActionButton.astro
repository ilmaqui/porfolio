---
interface Props {
	url: string
	action: string
	Icon: any
}

const { url, action, Icon } = Astro.props
---

<a
	href={url}
	role="link"
	target="_blank"
	class="inline-flex items-center justify-center gap-2 rounded-xl bg-gradient-to-r from-pink-500 to-violet-800 px-3 py-2 text-base text-white shadow-md"
>
	<Icon class="size-6" />{action}</a
>
