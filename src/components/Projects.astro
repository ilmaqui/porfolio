---
import { Image } from 'astro:assets'
import ExecumateImage from '../assets/execumate2.webp'
import Tailwind from '../icons/Tailwind.astro'
import TechnologyBadge from './TechnologyBadge.astro'
import Link from '../icons/Link.astro'
import ActionButton from './ActionButton.astro'
import GithubOutline from '../icons/GithubOutline.astro'
import AstroIcon from '../icons/AstroIcon.astro'

const PROJECTS = [
	{
		name: 'ExecuMate - Una extensi칩n de Visual Studio Code',
		description:
			'ExecuMate es una extensi칩n de Visual Studio Code que ayuda a los usuarios a tener un mejor control sobre la terminal y a lanzar comandos repetitivos m치s facilmente gracias a su interfaz visual.',
		image: ExecumateImage,
		tech: [
			{ name: 'Astro', className: 'bg-[#953600]/25 text-white', Icon: AstroIcon },
			{
				name: 'Tailwind CSS',
				className: 'bg-[#2bb1ec]/50 text-white',
				Icon: Tailwind
			}
		],
		links: [
			{
				action: 'C칩digo',
				url: 'https://github.com/ilmaqui/vscode-execumate',
				Icon: GithubOutline
			},
			{
				action: 'Demo',
				url: 'https://execumate.imaquilo.com/',
				Icon: Link
			}
		]
	}
]
---

<div class="flex flex-col gap-y-16">
	{
		PROJECTS.map((project) => (
			<article class="group flex flex-col space-y-8 space-x-0 md:flex-row md:space-y-0 md:space-x-8">
				<div class="relative col-span-6 row-span-5 flex transform flex-col items-center gap-8 overflow-clip rounded-xl shadow-xl transition duration-500 ease-in-out sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl">
					<Image
						loading="eager"
						class="h-72 w-full scale-110 rounded-xl object-cover object-top shadow-md transition duration-500 ease-in-out md:group-hover:scale-105"
						src={project.image}
						alt={project.name}
					/>
				</div>
				<div class="w-full max-w-lg md:w-1/2">
					<h3 class="mb-2 text-2xl font-bold text-gray-800">{project.name}</h3>
					<div class="flex flex-col">
						<div class="mb-4 flex flex-wrap items-center gap-2">
							{project.tech.map((tech) => (
								<TechnologyBadge {...tech} />
							))}
						</div>
						<p class="mb-4 text-pretty text-gray-600">{project.description}</p>
						<footer class="flex gap-2">
							{project.links && project.links.map((link) => <ActionButton {...link} />)}
						</footer>
					</div>
				</div>
			</article>
		))
	}
</div>
